<Window x:Class="ChuckNorris.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChuckNorris.wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Check Jokes" HorizontalAlignment="Center" Height="53" Margin="0,245,0,0" VerticalAlignment="Top" Width="410" FontFamily="Segoe UI Black" FontSize="22" Background="#FFED1212" Foreground="White" BorderBrush="{x:Null}" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="10" Y="10"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBlock HorizontalAlignment="Left" Height="157" Margin="197,59,0,0" Text="Chuck Norris Jokes" TextWrapping="Wrap" VerticalAlignment="Top" Width="408" Cursor="" FontFamily="Comic Sans MS" Background="#FFF1F1F1" Foreground="#FFD22C2C"/>

    </Grid>
</Window>
